---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span></span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 400%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		
	}
	.link-card > a {
		width:10%;
		text-decoration: none;
		line-height: 0.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		background-color: #2450b6;
		color: white;
		
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.0rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	
</style>
